# Environment variables for Hangar Bay Backend
# Copy this file to .env and fill in your actual values.

# Application Environment: development, production, or test
ENVIRONMENT="development"

# Logging Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# Database Connection URL (AsyncPG for PostgreSQL)
# Example: DATABASE_URL="postgresql+asyncpg://your_user:your_password@your_host:your_port/your_db_name"
DATABASE_URL="postgresql+asyncpg://user:password@localhost/hangar_bay_db"

# Cache Connection URL (Redis)
# Example: CACHE_URL="redis://your_host:your_port/0"
CACHE_URL="redis://localhost:6379/0"

# EVE Online ESI Application Credentials
# Obtain these from https://developers.eveonline.com/applications
ESI_CLIENT_ID=""
ESI_CLIENT_SECRET=""
